<main class="main-container account-form-container">
  <div class="form-custom ">
    <h3>Hello Again!</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "form-custom-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-custom-input" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "form-custom-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-custom-input" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "button-custom form-custom-btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</main>
