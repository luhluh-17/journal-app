<main class="main-container account-form-container">
  <div class="form-custom ">
    <h3 class="title-custom">Hello There!</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class: "form-custom-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-custom-input" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "form-custom-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-custom-input" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "form-custom-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-custom-input" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "button-custom form-custom-btn mt-5" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</main>
