<div id="<%= dom_id category %>">
  <%= link_to category, class: "block p-4 max-w-sm bg-white rounded-lg border border-blue-200 shadow-md bg-blue-500 hover:bg-blue-700" do %>
    <div class="flex flex-row justify-between items-start mt-1">
      <h5 class="mb-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white">
        <%= category.title %>
      </h5>
      <p class="inline-flex justify-center items-center p-3 w-3 h-3 text-sm font-medium text-blue-600 bg-blue-200 rounded-full">
        <%= category.tasks.count %>
      </p>
    </div>
  <% end %>
</div>
