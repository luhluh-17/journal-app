<div id="<%= dom_id task %>">
  <%= link_to task, class: task_style(task.priority_level) do %>
    <div class="flex flex-row justify-between">
      <p class="mb-2 text-sm font-bold tracking-tight text-gray-900 dark:text-white">
        <%= get_category(task.category_id) %>
      </p>
      <p class="mb-2 text-sm font-bold tracking-tight text-gray-900 dark:text-white">
        <%= task.deadline %>
      </p>
    </div>
    <h5 class="mb-2 mt-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white"><%= task.title %></h5>
  <% end %>
</div>
