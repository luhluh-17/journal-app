<aside class="h-screen w-64 dark:bg-gray-800" aria-label="Sidebar">
  <div class="h-full py-4 px-3 bg-gray-50 dark:bg-gray-800">
    <a href="#" class="flex items-center pl-2.5 mb-5">
      <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Journey</span>
    </a>
    <div class="sidebar-height flex flex-col justify-between">
      <ul class="space-y-2">
        <li>
          <%= link_to categories_path, class: "flex justify-between items-center p-2 text-base font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700" do %>
            <div class="flex items-center">
              <%= render "icons/category-icon" %>
              <span class="ml-3">Categories</span>
            </div>
            <span class="inline-flex justify-center items-center p-3 ml-3 w-3 h-3 text-sm font-medium text-blue-600 bg-blue-200 rounded-full dark:bg-blue-900 dark:text-blue-200">
              <%= current_user.categories.count %>
            </span>
          <% end %>
        </li>
        <li>
          <%= link_to tasks_path, class: "flex justify-between items-center p-2 text-base font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700" do %>
            <div class="flex items-center">
              <%= render "icons/task-icon" %>
              <span class="ml-3">Tasks</span>
            </div>
            <span class="inline-flex justify-center items-center p-3 ml-3 w-3 h-3 text-sm font-medium text-blue-600 bg-blue-200 rounded-full dark:bg-blue-900 dark:text-blue-200">
              <%= current_user.categories.map(&:tasks).flatten.count %>
            </span>
          <% end %>
        </li>
      </ul>
      <ul class="pt-4 mt-4 space-y-2 border-t border-gray-200 dark:border-gray-700">
        <li>
          <%= link_to destroy_user_session_path, class: "flex items-center p-2 text-base font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700", data: { turbo_method: :delete } do %>
            <%= render "icons/logout-icon" %>
            <span class="flex-1 ml-3 whitespace-nowrap">Logout</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</aside>
